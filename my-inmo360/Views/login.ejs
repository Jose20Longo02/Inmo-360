<%- include('partials/header') %>
<head>
  <link rel="stylesheet" href="/css/login.css" />
</head>

<div class="login-page">
  <!-- Overlay: se mostrará detrás del panel -->
  <div class="login-overlay"></div>
  <div class="login-container">
    <h2 class="login-title">Iniciar Sesión</h2>
    <form action="/login" method="POST" class="login-form">
      <div class="input-group">
        <label for="username">Nombre de Usuario o Correo</label>
        <input type="text" name="username" id="username" placeholder="Ingresa tu usuario o correo" required>
      </div>
      <div class="input-group">
        <label for="password">Contraseña</label>
        <input type="password" name="password" id="password" placeholder="Ingresa tu contraseña" required>
      </div>
      <button type="submit" class="btn login-btn">Iniciar Sesión</button>
    </form>
    <div class="login-footer">
      <a href="/register" class="register-link">¿No tienes una cuenta? Regístrate aquí</a>
    </div>
  </div>
</div>



<%- include('partials/footer') %>