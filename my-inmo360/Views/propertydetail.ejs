          <% if (property.m2_construccion) { %><li>ğŸ“ <%= property.m2_construccion %> mÂ² construcciÃ³n</li><% } %>
          <% if (property.m2_terreno) { %><li>ğŸŒ³ <%= property.m2_terreno %> mÂ² terreno</li><% } %>
          <% if (property.luxo) { %><li>âœ¨ Propiedad de lujo</li><% } %>

        <% } else if (property.tipo_propiedad === 'terreno') { %>
          <% if (property.tamano_terreno) { %><li>ğŸŒ³ <%= property.tamano_terreno %> mÂ² terreno</li><% } %>
          <% if (property.metros_frente) { %><li>ğŸ“ <%= property.metros_frente %> m frente</li><% } %>

