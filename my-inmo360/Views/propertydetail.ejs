          <% if (property.bodega_altura) { %><li>â†• Altura: <%= property.bodega_altura %> m</li><% } %>
          <% if (property.cantidad_oficinas) { %><li>ğŸ§‘â€ğŸ’¼ <%= property.cantidad_oficinas %> oficina(s)</li><% } %>
          <% if (property.cantidad_banos) { %><li>ğŸš½ <%= property.cantidad_banos %> baÃ±o(s)</li><% } %>

        <% } else if (property.tipo_propiedad === 'local comercial') { %>
          <% if (property.local_tamano) { %><li>ğŸ¬ <%= property.local_tamano %> mÂ² de local</li><% } %>
