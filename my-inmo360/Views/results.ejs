          <input type="number" name="m2ConstruccionMin" placeholder="Min" value="<%= query.m2ConstruccionMin || '' %>">
          <input type="number" name="m2ConstruccionMax" placeholder="Max" value="<%= query.m2ConstruccionMax || '' %>">
